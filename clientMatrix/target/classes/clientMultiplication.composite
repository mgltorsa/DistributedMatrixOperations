<composite name="clientMultiplication" 
    xmlns="http://www.osoa.org/xmlns/sca/1.0" 
    xmlns:frascati="http://frascati.ow2.org/xmlns/sca/1.1"
    targetNamespace="http://archisoft.com/matrixMultiplication">
    <service name="r" promote="client/r">
    </service>
    <component name="client">

        <service name="r">
            <interface.java interface="java.lang.Runnable" />
        </service>

        <reference name="matrixOperations">
            <frascati:binding.rmi host="localhost" serviceName="matrixMultiplication" port="1234"/>
        </reference>

        <implementation.java class="com.archisoft.Client" />

    </component>

</composite>
