<?xml version="1.0" encoding="UTF-8"?>

<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
  xmlns:frascati="http://frascati.ow2.org/xmlns/sca/1.1"
  targetNamespace="http://frascati.ow2.org/helloworld-rmi"
  name="ServerRMI">

  <service name="r" promote="wrapper/Runnable">
  </service>

  <service name="s" promote="server/service">
      <frascati:binding.rmi host="localhost/" serviceName="server" port="5000"/>
  </service>

  <component name="server">

    <service name="service">
      <interface.java interface="co.edu.icesi.interfaces.IServer" />
    </service>
 
    <implementation.java class="co.edu.icesi.Server" />
 
  </component>

  <component name="wrapper">
    <service name="Runnable">
      <interface.java interface="java.lang.Runnable"/>
    </service> 
    <property name="service">operations</property>  
    <implementation.java class="co.edu.icesi.ServerWrapper" />
  </component>

  <component name="config">
    <property name="brokerHost">localhost</property>
    <property name="brokerPort">7777</property>
    <property name="brokerService">redirecting</property>
    <implementation.java class="co.edu.icesi.configurations.BrokerConfiguration" />
  </component>

  <wire source="wrapper/configuration" target="config/IBrokerConfiguration" />

</composite>
